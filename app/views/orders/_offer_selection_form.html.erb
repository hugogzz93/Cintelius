<%= form_tag lock_order_path do  %>
	<% @order.offers.each do |offer| %>
		<%= check_box_tag 'selected_offers_id[]', offer.id, nil, data: {offer_id: offer.id} %>
	<% end %>
	<% @order.combos.each do |combo| %>
		<%= check_box_tag 'selected_combos_id[]', combo.id, nil, data: {combo_id: combo.id} %>		
	<% end %>
	<%= submit_tag "", id: "order_form_submit", data: {confirm: "Al confirmar la orden de estos pedidos no podrás hacer más cambios. ¿Deseas ordenar solamente los productos seleccionados?"} %>
<% end %>