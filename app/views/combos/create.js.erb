<% if @success %>
	$('.combo_list').append("<%= j render partial: '/offers/combo_box.html.erb', locals: {f: @combo, function: 'offer'} %>")
	$('.combo_box:first-of-type').addClass('highlight_this')
	$('.clear_candidate .product_list_area .combo_product_box').remove()
	$('.combo_product_add_button').addClass('disabled')
	$('#combo_price').val('0.0')
	$('#combo_comment_attributes_content').val('')


	// reinicia el formulario y lo esconde, hace visible el boton de nuevo combo
	$('.products_and_comment_field').addClass('hidden')
	$('.combo_instructions_container').removeClass('hidden')
	$('#new_combo_submit_button').prop('disabled', true)
	$('.combo_product_form').remove()
	$('#new_combo').removeClass('active')
	$('.add_new_combo_button').removeClass('hidden')
<% else %>
	$('.flash_messages').remove()
	$('body').append(' <%= j render partial: "layouts/flash_message.html.erb", 
								locals: {alert_class: "alert-failure", message: @message , title: "Tiempo agotado", image_url: "icons/icon-white-cross.png", message_box_type: "active"} %>')
<% end %>
	$('.clear_candidate').removeClass('.clear_candidate')

